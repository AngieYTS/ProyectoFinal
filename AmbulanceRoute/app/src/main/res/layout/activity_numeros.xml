<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityNumeros">

    <android.support.constraint.ConstraintLayout
        android:layout_width="395dp"
        android:layout_height="587dp"
        android:background="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginEnd="31dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="13dp"
            android:text="Numeros de Emergencia"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btnbomberos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btndefensa" />

        <Button
            android:id="@+id/btnambulancia"
            style="@android:style/Widget.Button.Toggle"
            android:layout_width="113dp"
            android:layout_height="70dp"
            android:layout_marginEnd="63dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="12dp"
            android:text="Ambulancia"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/btndefensa"
            app:layout_constraintTop_toBottomOf="@+id/btncruzroja" />

        <Button
            android:id="@+id/btnpolicia"
            style="@android:style/Widget.Button.Toggle"
            android:layout_width="113dp"
            android:layout_height="70dp"
            android:layout_marginBottom="17dp"
            android:layout_marginEnd="141dp"
            android:layout_marginStart="141dp"
            android:layout_marginTop="9dp"
            android:text="Policia"
            app:layout_constraintBottom_toTopOf="@+id/btnvolver"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnambulancia" />

        <Button
            android:id="@+id/btndefensa"
            style="@android:style/Widget.Button.Toggle"
            android:layout_width="113dp"
            android:layout_height="70dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="9dp"
            android:text="Defensa Civil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnbomberos" />

        <Button
            android:id="@+id/btnbomberos"
            style="@android:style/Widget.Button.Toggle"
            android:layout_width="113dp"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="44dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="3dp"
            android:text="Bomberos 119"
            app:layout_constraintBottom_toTopOf="@+id/btndefensa"
            app:layout_constraintEnd_toStartOf="@+id/btncruzroja"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Button
            android:id="@+id/btncruzroja"
            style="@android:style/Widget.Button.Toggle"
            android:layout_width="111dp"
            android:layout_height="68dp"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="63dp"
            android:layout_marginTop="13dp"
            android:text="Cruz Roja 112"
            app:layout_constraintBottom_toTopOf="@+id/btnambulancia"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Button
            android:id="@+id/btnvolver"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="123dp"
            android:layout_marginStart="123dp"
            android:background="@android:color/holo_red_dark"
            android:text="VOLVER"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnpolicia" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="383dp"
            android:layout_height="245dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/telefon" />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>